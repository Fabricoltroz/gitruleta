<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1" metadata-complete="true">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>idioma</param-name>
		<param-value>es</param-value>
	</context-param>
	<servlet>
	 	<servlet-name>JugadoresControlller</servlet-name>
	 	<servlet-class>controller.JugadoresControlller</servlet-class>	
	</servlet>
	<servlet>
	 	<servlet-name>JugadoresList</servlet-name>
	 	<servlet-class>presentacion.JugadoresList</servlet-class>	
	</servlet>
	
	<servlet-mapping>
		<servlet-name>JugadoresControlller</servlet-name>
		<url-pattern>/JugadoresControlller</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>JugadoresList</servlet-name>
		<url-pattern>/JugadoresList</url-pattern>
	</servlet-mapping>
</web-app>
